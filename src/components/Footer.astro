---
import { Image } from "astro:assets";
import LogoOptavaValis from "../assets/img/logooptavavalis_blanc.png";
---

<div class="bg-secondary text-light font-semibold mt-10 py-16">
  <div class="container mx-auto px-4">
    <div class="flex items-center gap-10 justify-center">
      <div class="text-center">
        <p class="text-2xl">Cabinet de thérapeutes</p>
        <a href="/">
          <Image
            src={LogoOptavaValis}
            width={200}
            height={200}
            format="webp"
            alt="Logo thérapeutes d'Optevoz"
            class="mx-auto -mt-4"
          />
        </a>
      </div>

      <div class="md:ml-24 text-lg text-center">
        <p>Site réalisé par Fabien Grignoux</p>

        <p><a class="underline" href="/cgu">Charte & conditions d'utilisation</a></p>

        <p><a class="underline" href="/mentions-legales">Mentions légales</a></p>
      </div>
    </div>
  </div>
</div>

<style scoped>
  div {
    font-family: "rufina" !important;
  }

</style>