---
import { Source } from "@unpic/astro";
import { Image } from "astro:assets";
import banner from "../../assets/img/banner.jpg"
import bannerPortrait from "../../assets/img/banner-portrait.jpg"
import Btn from "../vue/Btn.vue"
import Citation from "../Citation.astro"
---
<section>
    <div class="relative">
        <div class="absolute flex h-full w-full items-center z-10">
            <div class=" md:basis-1/2 lg:basis-1/2 mx-4 md:mx-auto -mt-24">
                <Citation class="mx-4">L'hypnose, c'est faire autrement
                    <Fragment slot="author">Dr Henri Bensoussan</Fragment>
                </Citation>
                <div class="mt-6 text-center md:text-left"><a href="/consultations"><Btn color="secondary">Prendre rendez-vous</Btn></a></div>
                
            </div>
        </div>

        <div class="w-full banner bg-primary h-banner">

            <picture class="image-banner">
                <!-- Small screens get a constrained square image -->
                <Source
                    src={bannerPortrait}
                    media="(max-width: 600px)"
                    width={600}
                    height={600}
                />
                <!-- Always include an Image as the final element -->
                <Image
                    src={banner}
                    width={1400}
                    alt="Aurora"
                    format="webp"
                    alt="Image du"
                    class="object-cover w-full h-full"
                />
            </picture>

           </div>
    </div>
</section>